@model IEnumerable<MyFirstProjectWebApp.Models.AccountModel>

@{
    ViewData["Title"] = "Account";
}

<center><h1 class="display-4">Accounts</h1></center>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPassword)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<hr/>
<p>
    <center><a asp-action="Create">Create Another Account</a></center>
    <hr />
</p>
